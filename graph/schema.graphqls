type Category {
  id: ID!
  name: String!
  description: String
  coursers: [Courser!]!
}

type Course {
  id: ID!
  name: String!
  description: String
  category: Category!
}

input NewCategory {
  name: String!
  description: String
}

input NewCurse {
  name: String!
  description: String
  categoryId: ID!
}

type Query {
  categories: [Categories!]!
  courses: [Courses!]!
}

type Mutation {
  createCategory(input: NewCategory): Category!
  createCourse(input: NewCurse ): Course!
}